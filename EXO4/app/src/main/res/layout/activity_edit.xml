<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/monLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="titre:" />

    <EditText
        android:id="@+id/titre_et"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date :" />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btndate"
        android:text="changer la date"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/date_edit"
        android:layout_height="wrap_content"/>




    <TextView
        android:id="@+id/txtttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contenu:" />

    <EditText
        android:id="@+id/contenu_et"

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/white"
        android:ems="10" />

    <Button
        android:id="@+id/btncahngercouleur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="changer la couleur" />
    <Button
        android:id="@+id/btnSauvegarder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sauvegarder" />

</LinearLayout>
